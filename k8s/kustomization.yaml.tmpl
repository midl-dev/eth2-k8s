configMapGenerator:
- name: polkadot-configmap
  literals:
      - ETH1_URL="${eth1_url}"
      - KUBERNETES_NAME_PREFIX="${kubernetes_name_prefix}"

patchesStrategicMerge:
- prefixedpv.yaml
- regionalpvpatch.yaml
